# ============================================================================
# Backend Configuration
# ============================================================================

# API Keys (Required)
# Generate a secure random API key for authentication:
# Example: openssl rand -hex 32
API_KEY=your_secure_api_key_here_change_this

# AI Provider API Keys (At least one required)
GOOGLE_API_KEY=your_google_gemini_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# ============================================================================
# Security Configuration
# ============================================================================

# Maximum video duration in seconds (default: 5400 = 1.5 hours)
MAX_VIDEO_DURATION=5400

# Operation timeout in seconds (default: 300 = 5 minutes)
OPERATION_TIMEOUT=300

# ============================================================================
# API Configuration
# ============================================================================

# API request timeout (default: 120 seconds)
API_TIMEOUT=120

# YouTube download timeout (default: 60 seconds)
YOUTUBE_TIMEOUT=60

# Maximum text length for processing (default: 20000 characters)
MAX_TEXT_LENGTH=20000

# ============================================================================
# Development Configuration
# ============================================================================

# Enable debug mode (set to false in production)
DEBUG=false
